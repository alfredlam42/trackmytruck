<% include ../partials/header %>
    <script src='/js/truck_map.js'></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=<%= process.env.MAP_KEY %>&signed_in=true&callback=initTruckMap&libraries=geometry"
         async defer></script>

 <!-- Sidebar content -->
       <div class='eight columns offset-by-two' id='truckpitch'>
         <p>allow me to tell you why trackmytruck rocks</p>
       </div>

   </div> <!-- Any content in sidebar goes ABOVE this div closure-->

   <div class='eight columns' id='content'>
    <h1><%= title %></h1>
    <div id='truckmap' class='set-location'></div>
    <div class='six columns offset-by-three'>
      <form method='post', action="/trucks/<%=truck.id%>/setlocation" id='<%=truck.id%>'>
      <div class="row">
    	  <div class="six columns">
    	    <label for="exampleRecipientInput">I'll be at this location until: </label>
    	    <select class="u-full-width" id="truck-time-input">
    	    <option value="Option 1">1:00pm</option>
    	    <option value="Option 2">2:00pm</option>
    	    <option value="Option 3">3:00pm</option>
    	    <option value="Option 4">4:00pm</option>
    	    <option value="Option 5">5:00pm</option>
    	    <option value="Option 6">6:00pm</option>
    	    <option value="Option 7">7:00pm</option>
    	    <option value="Option 8">8:00pm</option>
    	    <option value="Option 9">9:00pm</option>
    	    <option value="Option 10">10:00pm</option>
    	    <option value="Option 11">11:00pm</option>
    	    <option value="Option 12">12:00am</option>
    	    </select>
    	  </div>
      </div>
      <label for="exampleMessage">Today's Promotion (optional)</label>
    	<textarea class="u-full-width" placeholder="Today's special deals or promotions" id="truck-promo"></textarea>
      <input class="button-primary" type="submit" value='Open for Business'>
      </form>
    </div>
  </div>
<% include ../partials/footer %>
