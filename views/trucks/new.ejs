<% include ../partials/header %>
<div class="row">
  <div class="six columns">
    <h1>Register a Truck</h1>
	<form method='post', action='/trucks'>
	  <input name='yelpUrl' placeholder='www.yelp.com/biz/tacotuesdays'>
	  <input name='password' placeholder='password' type='password'>
	  <input name='name' placeholder='Taco Tuesdays'>
	  <input name='description' placeholder='All the tacos on all the days' type='text'>
	  <input type='submit'>
	</form>
  </div>
  
  <div class="six columns">
    <h1>Truck Login</h1>
    <form method='post', action='/trucks/login'>
      <input name='yelpUrl' placeholder='www.yelp.com/biz/tacotuesdays'>
      <input name='password' placeholder='password' type='password'>
      <input type='submit'>
    </form>
  </div>
</div>
<% include ../partials/footer %>